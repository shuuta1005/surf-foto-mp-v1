// ═══════════════════════════════════════════════════════════════
// PRISMA SCHEMA - BrahFotos Surf Photo Marketplace
// ═══════════════════════════════════════════════════════════════

// ───────────────────────────────────────────────────────────────
// CONFIGURATION
// ───────────────────────────────────────────────────────────────

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ───────────────────────────────────────────────────────────────
// ENUMS
// ───────────────────────────────────────────────────────────────

enum Role {
  ADMIN
  PHOTOGRAPHER
  USER
}

enum GalleryStatus {
  PENDING // Awaiting admin approval
  APPROVED // Live and public
  REJECTED // Not approved by admin
}

// ═══════════════════════════════════════════════════════════════
// USER & AUTHENTICATION MODELS
// ═══════════════════════════════════════════════════════════════

model User {
  id            String    @id @default(uuid())
  name          String    @default("NO_NAME")
  email         String    @unique(map: "user_email_idx")
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(USER)
  verified      Boolean   @default(false)

  // Photographer-specific fields
  stripeAccountId String? // For payouts to photographers
  bio             String? // Photographer profile bio
  avatarUrl       String? // Profile picture
  local_break     String? // Home surf spot
  local_area      String? // Home area

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  accounts  Account?
  sessions  Session[]
  galleries Gallery[]  @relation("PhotographerGalleries")
  purchases Purchase[]
}

model PendingUser {
  id             String    @id @default(cuid())
  email          String    @unique
  name           String
  hashedPassword String
  token          String    @unique // Verification code
  expires        DateTime // Code expiry
  lastSentAt     DateTime? // Rate limiting
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([email])
  @@index([token])
  @@index([expires])
}

model Account {
  id                String   @id @default(uuid())
  userId            String   @unique
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  sessionToken String   @id
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model PasswordResetCode {
  id           String    @id @default(cuid())
  email        String    @unique
  code         String
  expires      DateTime
  attempts     Int       @default(0)
  verified     Boolean   @default(false)
  resetToken   String?
  tokenExpires DateTime?
  lastSentAt   DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@map("password_reset_codes")
}

// ═══════════════════════════════════════════════════════════════
// GALLERY & PHOTO MODELS
// ═══════════════════════════════════════════════════════════════

model Gallery {
  id String @id @default(uuid())

  // Location & Session Info
  prefecture  String // e.g., "千葉県"
  area        String // e.g., "千葉北"
  surfSpot    String // e.g., "志田下"
  date        DateTime // Session date
  sessionTime String // e.g., "08:00 - 11:00" (required)

  // Media
  coverPhoto String? // Cover image URL

  // Pricing (NEW)
  price Int @default(1000) // Base price per photo (JPY)

  // Ownership & Status
  photographerId String
  status         GalleryStatus @default(PENDING)

  // Metadata
  createdAt DateTime @default(now())

  // Relations
  photographer User          @relation("PhotographerGalleries", fields: [photographerId], references: [id])
  photos       Photo[]
  pricingTiers PricingTier[]
}

model Photo {
  id        String @id @default(uuid())
  galleryId String

  // URLs
  photoUrl    String // Watermarked version (public display)
  originalUrl String // High-res original (after purchase)

  // Metadata
  createdAt DateTime @default(now())

  // Relations
  gallery   Gallery    @relation(fields: [galleryId], references: [id])
  purchases Purchase[]
}

model PricingTier {
  id        String @id @default(uuid())
  galleryId String // Required - every tier belongs to a gallery

  // Bundle Definition
  quantity Int // Number of photos in bundle (e.g., 2, 3, 5)
  price    Int // Total price for bundle (JPY)

  // Metadata
  createdAt DateTime @default(now())

  // Relations
  // onDelete: Cascade = if gallery is deleted, automatically delete all its pricing tiers
  // This prevents orphaned pricing tiers in the database
  gallery Gallery @relation(fields: [galleryId], references: [id], onDelete: Cascade)
}

// ═══════════════════════════════════════════════════════════════
// PURCHASE MODEL
// ═══════════════════════════════════════════════════════════════

model Purchase {
  id              String   @id @default(uuid())
  userId          String
  photoId         String
  paymentIntentId String? // Stripe payment intent ID
  refunded        Boolean  @default(false)
  createdAt       DateTime @default(now())

  // Relations
  photo Photo @relation(fields: [photoId], references: [id])
  user  User  @relation(fields: [userId], references: [id])
}
