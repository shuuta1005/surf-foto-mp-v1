generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Gallery {
  id         String   @id @default(uuid())
  name       String
  location   String?
  coverImage String? // âœ… New field for manually setting the cover image
  photos     Photo[]
  createdAt  DateTime @default(now())
}

model Photo {
  id         String   @id @default(uuid())
  gallery    Gallery  @relation(fields: [galleryId], references: [id])
  galleryId  String
  photoUrl   String
  title      String?
  uploadedAt DateTime @default(now())
}
